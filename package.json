{
  "name": "@filearchitect/monorepo",
  "private": true,
  "version": "0.1.4",
  "description": "File Architect monorepo",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest run --config ./vitest.config.ts",
    "test:watch": "vitest --config ./vitest.config.ts",
    "demo": "pnpm --filter browser-demo dev",
    "dev": "pnpm --parallel -r dev",
    "cli": "pnpm --filter @filearchitect/cli dev",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "patch": "pnpm --recursive --workspace-root exec npm version patch",
    "publish": "pnpm build && pnpm publish -r --filter @filearchitect/core --filter @filearchitect/cli",
    "try": "pnpm cli create structure.txt output --replace-file main:bar --replace-folder inal:demo && open packages/cli/output"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "vitest": "^1.6.0"
  }
}
